{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "description": "A RESTful API for managing a restaurant, built with Express, Typescript, and PostgreSQL",
  "scripts": {
    "start": "tsx dist/index.js",
    "dev": "tsx --watch src/index.ts",
    "build": "rimraf dist && tsup src/index.ts --format cjs,esm --dts --minify"
  },
  "keywords": [
    "express",
    "typescript",
    "postgres",
    "drizzle",
    "api"
  ],
  "author": "Murilo Carneiro",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.0.0",
    "drizzle-orm": "^0.44.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "pg": "^8.16.2",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
